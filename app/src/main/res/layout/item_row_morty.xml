<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardBackgroundColor= "@color/teal_700"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/item_image_morty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_name_morty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cv_img"
        android:text="name"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_spesies_morty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cv_img"
        android:layout_below="@id/item_name_morty"
        android:text="Spesies"
        android:textSize="20sp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/item_human_morty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/item_spesies_morty"
        android:layout_below="@id/item_name_morty"
        android:text="human"
        android:textSize="20sp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/item_Status_morty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/cv_img"
        android:layout_below="@id/item_spesies_morty"
        android:text="status"
        android:textSize="20sp"
        android:textStyle="normal"/>


</RelativeLayout>